@model Domain.Entities.Payout

@{
    ViewBag.Title = "Create payout - Mining operator";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_main.cshtml";
    if (User.Identity.Name!="Admin")
    {
        Response.Redirect("~/Rates/Index");
    }
}
    <div class="panel panel-default">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="panel-body">
                <table class="table table-striped table-condensed table-bordered">
                    <tr class="text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.LabelFor(model => model.owner, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.owner, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.owner } })
                        @Html.ValidationMessageFor(model => model.owner, "", new { @class = "text-danger" })
                    </tr>
                    <br />
                    <tr class="text-center">
                        @Html.LabelFor(model => model.count, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
                    </tr>
                    <br />
                    <tr class="text-center">
                        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now } })
                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                    </tr>
                </table>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", new { Login = @ViewBag.owner }, new { @class = "btn btn-default" })
            </div>

        }

    </div>

