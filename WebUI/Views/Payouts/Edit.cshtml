@model Domain.Entities.Payout

@{
    ViewBag.Title = @ViewBag.Login + " edit payout - Mining operator";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_main.cshtml";
    if (User.Identity.Name != "Admin") Response.Redirect("~/Rates/Index");
    
}

    <div class="panel panel-default">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="panel-body">
                <table class="table table-striped table-condensed table-bordered">
                    <tr class="text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        @Html.LabelFor(model => model.owner, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.owner, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.owner, "", new { @class = "text-danger" })
                    </tr>
                    <br />
                    <tr class="text-center">
                        @Html.LabelFor(model => model.count, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
                    </tr>
                    <br />
                    <tr class="text-center">
                        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @type = "datetime", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                    </tr>
                    <br />
                    <tr class="text-center">
                        @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br />
                        @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                    </tr>
                </table>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", new { Login = @ViewBag.Login }, new { @class = "btn btn-default" })
            </div>
        }


    </div>