<header class="header">
    <a href="/" class="logo">
        <!-- Add the class icon to your logo image or logo icon to add the margining -->
        Mining Operator
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-left">
            <ul class="nav navbar-nav">
                @if (!Request.IsAuthenticated)
                {
                    <li><a href='@Url.Action("Login","Account")'><i class="fa fa-sign-in"></i> Login</a></li>
                }
                else
                {
                    <li><a href='@Url.Action("Main","Profile")'><i class="fa fa-user"></i> Welcome, @User.Identity.Name</a></li>
                    <li><a href='@Url.Action("Logoff","Account")'><i class="fa fa-sign-out"></i> Log Out</a></li>
                }
            </ul>
        </div>
    </nav>
</header>