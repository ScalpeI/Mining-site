@model Domain.Entities.User
@{
    ViewBag.Title = "Mining Operator - " + User.Identity.Name + " Profile";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_main.cshtml";
}

    <div class="center_content">
        <div class="center_left">
            <ul class="nav nav-pills">
                <li class="active">@Html.ActionLink("Profile", "Main", "Profile")</li>
                <li role="presentation">@Html.ActionLink("Balance", "Balance", "Profile")</li>

                @if (ViewBag.check == true)
                {
                    <li role="presentation">@Html.ActionLink("Payout", "Payout", "Profile")</li>
                }
            </ul>
        </div>
        <div class="tab-content">
            <div class="tab-pane active">
                <div class="col-sm-12">
                    <div>
                        <div>
                        </div>
                        <div>
                            <form class="form-horizontal" method="post" style="margin-bottom:0" autocomplete="off" novalidate="novalidate">
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="username">Username</label>
                                    <div style="padding-top: 7px;" class="col-sm-6">@Model.Login</div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-xs-8 col-sm-4 col-md-4 col-lg-4" for="email">Email Address</label>
                                    <!--<div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
    <input id="email" class="form-control" type="text" data-rule-minlenght="2" data-rule-required="true" name="email" value="" placeholder="Email" />-->
                                    <div style="padding-top: 7px;" class="col-sm-6">@Model.Email</div>
                                    <!--</div>-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>

    </div>
